{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"],
      "@components/*": ["./components/*"],
      "@styles/*": ["./styles/*"],
      "@hooks/*": ["./hooks/*"],
      "@utils/*": ["./utils/*"],
      "@types/*": ["./types/*"],
      "@https/*": ["./https/*"],
      "@repository/*": ["./repository/*"],
      "@services/*": ["./services/*"],
      "@validations/*": ["./validations/*"],
      "@data/*": ["./data/*"],
      "@middleware/*": ["./middleware/*"]
    },
    "typeRoots": ["./node_modules/@types", "./types"],
    "target": "ESNext",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "types": ["react"]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "types/**/*.d.ts",
    "lib/prisma/**/*.ts",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "lib/prisma/seed.ts"
  ],
  "exclude": ["node_modules"]
}
